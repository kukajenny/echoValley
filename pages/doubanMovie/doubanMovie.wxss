page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.contain {
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
}

.contain text {
  /* font-size: 0.8em; */
  color: #222;
}

.containMargin {
  margin: 10rpx auto;
  /* background-color: #fff;  
  box-shadow:0px 0px 8px #6BA7F0; */
}

.movie_search {
  flex-direction: row;
  display: flex;
}

.movie_search input {
  width: 75%;
  border: 1rpx solid rgba(0, 0, 0, 0.24);
}

.movie_search button {
  background-color: rgb(61, 132, 224);
}

.scroll-view_H {
  width: 100%;
  white-space: nowrap; /*强制不换行*/
}

/*隐藏滚动条  */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.doubanMovie_theaters {
  padding: 15rpx;
  display: inline-block;
}

.doubanMovie_theaters_info {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  height: 350rpx;
}

.doubanMovie_theaters_info image {
  width: 100%;
}

.doubanMovie_theaters_info text {
  height: 70rpx;
  line-height: 35rpx;
  width: 100%;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}


