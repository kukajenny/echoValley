page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.contain {
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
}

.contain text {
  /* font-size: 0.8em; */
  color: #222;
}

.containMargin {
  margin: 10rpx auto;
  /* background-color: #fff;  
  box-shadow:0px 0px 8px #6BA7F0; */
}

.title {
  font-size: 1.5em;
}

.content {
  overflow: auto;
}

.content .content_info {
  float: right;
  width: 35%;
}

.content .content_info .content_image {
  width: 100%;
}

.label {
}

.summary {
  /* flex-direction: row;
  display: flex; */
}

.summary .summary_info {
  font-size: 28rpx;
  /* height: 70rpx; *//* line-height: 35rpx; */
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /*行数为2*/
  overflow: hidden;
  text-overflow: ellipsis;
  width: 80%;
}

.summary_open {
  float: right;
  text-align: bottom;
}
