@import "../common/stars/stars.wxss";

page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.contain {
  padding: 20rpx;
  align-items: center;
  box-sizing: border-box;
}

.contain text {
  /* font-size: 0.8em; */
  color: #222;
}

.containMargin {
  margin: 10rpx auto;
  /* background-color: #fff;  
  box-shadow:0px 0px 8px #6BA7F0; */
}

.block {
  margin-top: 30rpx;
}

.movie_title {
  font-size: 1.5em;
}

.subtitle {
  font-size: 1.1em;
  color: rgb(34, 106, 194) !important;
}

.content {
  overflow: auto;
}

.content .content_info {
  float: right;
  width: 35%;
}

.content .content_info .content_image {
  width: 100%;
}

/* ************电影标签************** */

.label {
  display: flex;
  flex-direction: row;
}

.label .label_info {
  border: 1px solid #6ba7f0;
  margin: 10rpx;
  padding: 10rpx;
  border-radius: 25rpx;
  color: #1d579e;
}

/* ************剧情简介************ */

.summary {
  /* flex-direction: row;
  display: flex; */
}

.summary .summary_info_close {
  /* font-size: 28rpx; */
  margin-top: 20rpx;
  /* height: 70rpx; *//* line-height: 35rpx; */
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3; /*行数为2*/
  overflow: hidden;
  text-overflow: ellipsis;
  /* text-indent: 2em; */
}

.summary_info_open {
  /* font-size: 28rpx; */
  display: -webkit-box;
  margin-top: 20rpx;
  /* text-indent: 2em;   */
}

.summary_title {
  font-size: 1.2em;
}

.summary_open {
  float: right;
  margin-top: 170rpx;
  padding: 0 0 0 10rpx;
  color: #6ba7f0 !important;
}

/* ********影人介绍********* */

.person {
}

.scroll-view_H {
  width: 100%;
  white-space: nowrap; /*强制不换行*/
}

/*隐藏滚动条  */

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.doubanMovie_theaters {
  padding: 15rpx;
  display: inline-block;
}

.persons_content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 200rpx;
  height: 350rpx;
}

.persons_content .person_image {
  width: 100%;
}

.persons_content .person_name {
  height: 70rpx;
  line-height: 35rpx;
  width: 100%;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
  margin-top: 15rpx;
}

.persons_content .person_position {
  font-size: 0.8em;
  color: rgb(126, 119, 119);
}
