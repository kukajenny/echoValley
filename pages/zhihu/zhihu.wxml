<view class="container">
  <view class="page-section">
    <swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" circular="{{circular}}" vertical="{{vertical}}" interval="{{interval}}" duration="{{duration}}" previous-margin="{{previousMargin}}px" next-margin="{{nextMargin}}px">
      <block wx:for="{{top_stories}}" wx:key="*this">
        <swiper-item>
          <view class="swiper-item">
            <image src="{{item.image}}" mode='aspectFill'></image>

            <view class='blackView'></view>
            <text>{{item.title}}</text>
          </view>
        </swiper-item>
      </block>
    </swiper>
  </view>

  <view class='story-contain'>
    <block wx:for="{{stories}}">
      <navigator url="zhihuInfo?id={{item.id}}" hover-class="navigator-hover">
        <view class="story-info">
          <view>
            <image src="{{item.images[0]}}" mode='aspectFill'></image>
          </view>
          <text>{{item.title}}</text>
        </view>
      </navigator>

    </block>
  </view>
</view>