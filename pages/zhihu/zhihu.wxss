page {
  background-color: #f8f8f8;
  height: 100%;
  font-size: 32rpx;
  line-height: 1.6;
}

.page-body {
  padding-top: 60rpx;
}

.page-section {
  width: 100%;
}

.page-section swiper {
  height: 450rpx;
}

/* 修改swiper下的点的样式 */
.page-section swiper .wx-swiper-dot{
    /* width:40rpx; */
    display: inline-flex;
    height: 8rpx;
    margin-left: 15rpx;
    justify-content:space-between;
}
.page-section swiper .wx-swiper-dot::before{
    content: '';
    flex-grow: 1; 
    background: rgba(255,255,255,0.8);
    border-radius: 8rpx
}
.page-section swiper .wx-swiper-dot-active::before{
    background:rgb(16, 63, 216);   
}

.swiper-item image {
  width: 100%;
  height: 450rpx;
}

.swiper-item text {
  position: absolute;
  bottom: 0rpx;
  left: 0px;
  color: #fff;
  font-size: 1.3em;
  margin: 40rpx;
  font-weight: normal;
}

.blackView {
  /*渐变背景  */
  background-image: linear-gradient(0deg, rgba(0,0,0,.6),rgba(255,255,255,0));
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

/*story 内容  */
.story-contain{
  margin: 30rpx;
}
.story-info{
  padding: 20rpx;
  /* border: solid 1px #222; */
  display: flex;
  flex-direction: line;
  margin: 30rpx 0;
  background-color: #fff;
  /*使内容居中****  */
  align-items: center;
  box-shadow: 0px 0px 4px #D8D8D8;
}
.story-info image{
  width: 180rpx;
  height: 140rpx; 
  margin: 0 20rpx;
}
